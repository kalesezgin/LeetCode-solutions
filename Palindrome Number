var isPalindrome = function (x) {
   // Convert the integer to a string.
  const str = x.toString();
  
  // Initialize two pointers, one pointing to the first character
  // of the string and the other to the last character.
  let left = 0;
  let right = str.length - 1;
  
  // Compare characters from both ends of the string until the pointers meet.
  while (left < right) {
    if (str[left] !== str[right]) {
      return false;
    }
    left++;
    right--;
  }
  
  // If all characters match, the string is a palindrome.
  return true;
};
